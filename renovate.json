{
  "extends": ["config:base"],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchPaths": ["**/mysql/**", "**/mongodb/**", "**/postgres/**"],
      "groupName": "database-updates"
    },
    {
      "matchPaths": [
        "**/gke/**",
        "**/istio/**",
        "**/kafka/**",
        "**/redis/**",
        "**/nats/**",
        "**/athens-proxy/**",
        "**/helm/**",
        "**/terraform/**",
        "**/argo-cd/**"
      ],
      "groupName": "infra-updates"
    }
    ],
    "regexManagers": [
    {
        "description": "Update docker image references in all Kubernetes YAML manifests",
        "fileMatch": [".*\\.ya?ml$"],
        "matchStrings": [
        "image:\\s*['\"]?(?<depName>[\\w./-]+)(?::(?<currentValue>[\\w.-]+))?['\"]?"
        ],
        "datasourceTemplate": "docker"
    }
    ]}
